
<div class="row">

    <div class="col-lg-4 col-md-6 mb-4">

                    <div class="card h-100">
                        <a href="#"><%= image_tag ('covers/'+  @books.url), :class => "card-img-top imagen_altura" %></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="#"><%= @books.title %></a>
                            </h4>
                            <h5>$<%= @books.price %></h5>
                            <p class="card-text"><%= @books.category.name %> / <%= 'ISBN '+ @books.isbn %></p>
                            <p class="card-text"><%= @books.author.first_name %> <%= ' '+ @books.author.last_name %></p>
                           
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            <span class='btn btn-info' style='float: right;'><%= link_to 'Edit', edit_book_path(@books) , :class=>'colorTexto'%></span>
                        </div>
                    </div>

          
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12 mb-12">
        <div class="list-group">
            <div class="list-group-item">
                <%= link_to 'Delete', @books, method: :delete, data: {confirm:'Are You Sure?'}, :class =>'colorTexto btn btn-danger'%>
                <%= link_to 'Back', books_index_path , :class =>'colorTexto btn btn-success'%>
            </div>
        </div>        
    </div>
</div>
