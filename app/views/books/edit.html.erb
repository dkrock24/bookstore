
<%= form_for @books do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :isbn %>
		<%= f.number_field :isbn, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :categories %>
		<%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class:'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :Author %>
		<%= f.select :author_id, Author.all.collect {|x| [x.first_name, x.id]}, {:include_blank => 'Select One'}, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :Publisher %>
		<%= f.select :publishers_id, Publisher.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :format %>
		<%= f.text_field :format, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :excerpt %>
		<%= f.text_area :excerpt, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :pages %>
		<%= f.number_field :pages, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :prices %>
		<%= f.text_field :price, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :buy %>
		<%= f.text_field :buy, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :year %>
		<%= f.text_field :year, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.label :url %>
		<%= f.text_field :url, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.submit "Submit" , class:'btn btn-primary' %>
		<%= link_to "Cancel", books_path, class:'btn btn-warning' %>
	</div>

<% end %>
