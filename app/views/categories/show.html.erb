

<div class="row">
            <% @books.each do |b| %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="#"><%= image_tag ('covers/'+ b.url ), :class => "card-img-top imagen_altura" %></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="#"><%= b.title %></a>
                            </h4>
                            <h5>$<%= b.price %></h5>
                            <p class="card-text"><%= b.category.name %> / <%= 'ISBN '+ b.isbn %></p>
                            <p class="card-text"><%= b.author.first_name %> <%= ' '+ b.author.last_name %></p>
                           
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            <span class='btn btn-info' style='float: right;'><%= link_to 'Mas', b , :class=>'colorTexto'%></span>
                        </div>
                    </div>
                </div>
            <% end %>
</div>