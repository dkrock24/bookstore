<%= form_for @category do |f| %>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class:'form-control'%>
	</div>

	<div class="form-group">
		<%= f.submit "Submit" , class:'btn btn-primary' %>
		<%= link_to "Cancel", categories_path, class:'btn btn-warning' %>
	</div>

<% end %>